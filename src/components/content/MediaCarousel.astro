---
import ImageBlock from "./ImageBlock.astro";
import VideoBlock from "./VideoBlock.astro";
import EmbedBlock from "./EmbedBlock-ifm.astro";
import type { MediaItem } from "../../lib/MediaItemTypes";

// Props for the component
interface Props {
  items: MediaItem[];
}

const { items } = Astro.props;
---

<div class="swiper-body full">
  <div class="swiper">
    <div class="swiper-wrapper">
      {
        items.map((item) => (
          <div class="swiper-slide">
            {item.type === "image" && (
              <ImageBlock
                image={item.src}
                alt={item.alt || "Image"}
                title={item.title}
              />
            )}
            {item.type === "video" && (
              <VideoBlock
                sources={item.sources}
                title={item.title}
                description={item.description}
                subtitle={item.subtitle}
                thumb={item.thumb}
                size={item.size}
                showCaption={item.showCaption}
              />
            )}
            {item.type === "embed" && (
              <EmbedBlock
                service={item.service}
                id={item.id}
                title={item.title}
                params={item.params}
                thumbnail={item.thumbnail}
                ratio={item.ratio}
                autoscale={item.autoscale}
                widget={item.widget}
                size="none"
              />
            )}
          </div>
        ))
      }
    </div>
    <div class="swiper-pagination"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-scrollbar"></div>
  </div>
</div>

<style>
  .swiper-body {
    position: relative;
    height: 600px;
  }
  .swiper {
    width: 100%;
    height: 100%;
  }
  .swiper-slide {
    text-align: center;
    font-size: 18px;
    /* background: #fff; */
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .swiper-slide img,
  .swiper-slide video,
  .swiper-slide iframe {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

<script src="../../lib/SwiperSimple.js"></script>
