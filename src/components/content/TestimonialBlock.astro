---
export interface Props {
  quote: string; // De quote-tekst (vereist)
  name: string; // Naam van de persoon (vereist)
  role?: string; // Functie/rol van de persoon (optioneel)
  company?: string; // Naam van het bedrijf (optioneel)
}

const { quote, name, role, company } = Astro.props;
---

<figure class="testimonial-block feature">
  <blockquote>
    <p>{quote}</p>
  </blockquote>
  <figcaption>
    <strong>{name}</strong>
    {role && <span class="role"> - {role}</span>}
    {company && <span class="company">, {company}</span>}
  </figcaption>
</figure>

<style>
  .testimonial-block {
    padding: 2rem;
    border: none;

    border-radius: 0.5rem;
  }

  blockquote {
    margin: 0;
    padding: 0;
    font-family: var(--font-family-special);
    font-size: clamp(2rem, 1.3455rem + 2.9091vw, 6rem);
    color: #fff;
    line-height: 112.5%;
  }

  blockquote p {
    margin: 0;
  }

  figcaption {
    margin-top: 1.5rem;
    font-size: 1rem;
    color: #555;
    text-align: center;
  }

  figcaption strong {
    font-weight: bold;
    color: #d3d3d3;
  }

  .role {
    font-style: normal;
    color: #777;
  }

  .company {
    font-style: normal;
    color: #999;
  }
</style>
