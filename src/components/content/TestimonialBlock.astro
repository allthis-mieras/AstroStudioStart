---
export interface Props {
  quote: string; // De quote-tekst (vereist)
  name: string; // Naam van de persoon (vereist)
  role?: string; // Functie/rol van de persoon (optioneel)
  company?: string; // Naam van het bedrijf (optioneel)
}

const { quote, name, role, company } = Astro.props;
---

<figure class="testimonial-block">
  <blockquote>
    <p>{quote}</p>
  </blockquote>
  <figcaption>
    <strong>{name}</strong>
    {role && <span class="role"> - {role}</span>}
    {company && <span class="company">, {company}</span>}
  </figcaption>
</figure>

<style>
  .testimonial-block {
    margin: 2rem auto;
    padding: 2rem;
    border-left: 4px solid var(--primary-color, #333);
    background-color: #f9f9f9;
    font-family: Arial, sans-serif;
    max-width: 800px;
    border-radius: 8px;
  }

  blockquote {
    margin: 0;
    padding: 0;
    font-style: italic;
    font-size: 1.25rem;
    color: #333;
    line-height: 1.5;
  }

  blockquote p {
    margin: 0;
  }

  figcaption {
    margin-top: 1.5rem;
    font-size: 1rem;
    color: #555;
    text-align: left;
  }

  figcaption strong {
    font-weight: bold;
    color: #000;
  }

  .role {
    font-style: normal;
    color: #777;
  }

  .company {
    font-style: normal;
    color: #999;
  }
</style>
