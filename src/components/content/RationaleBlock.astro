---
export interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<section class="rationale-block page">
  <h5 class="title">{title}</h5>
  <p>{content}</p>
</section>

<style>
  .rationale-block {
    text-align: left;
    margin-bottom: var(--space-xl);
  }
  .rationale-block p,
  .rationale-block .title {
    font-size: 2rem;
    font-weight: 500;
    line-height: 125%;
    text-wrap: balance;
  }

  .rationale-block .title {
    opacity: 0.5;
  }
</style>
