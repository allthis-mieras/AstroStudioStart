---
export interface Props {
  content?: any[];
}

const { content } = Astro.props;
---

<section class="text-block">
  <!-- {content} -->
  <slot />
</section>

<style>
  .text-block {
  }
  .text-block h3 {
    font-size: 1.5rem;
  }
  .text-block h4 {
    font-size: 1.25rem;
  }

  .text-block p + h3,
  .text-block p + h4 {
    margin-top: 2rem; /* Of een andere gewenste waarde */
  }
</style>
