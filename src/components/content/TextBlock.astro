---
export interface Props {
  content?: string; // HTML-content als string
}

const { content } = Astro.props;
---

<section class="text-block">
  {
    content ? (
      // Direct HTML-injectie
      <div set:html={content} />
    ) : (
      // Gebruik slot als er geen content is
      <slot />
    )
  }
</section>
<style>
  .text-block {
    text-align: left;
  }
  .text-block h3 {
    font-size: 1.5rem;
  }
  .text-block h4 {
    font-size: 1.25rem;
  }
  .text-block h5 {
    font-size: 1.125rem;
  }
  .text-block h6 {
    font-size: 1.125rem;
  }
</style>
