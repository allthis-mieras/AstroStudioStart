---
import "@fontsource-variable/instrument-sans";
import "@fontsource/instrument-serif";
import "@fontsource-variable/geist-mono";

import "../assets/scss/globals.scss";
import "../assets/default.css";
import CookieConsent from "../components/CookieConsent.astro";
import SiteMeta from "../components/SiteMeta.astro";
import DarkMode from "../components/DarkMode.astro";

// import Header from "../components/Header.astro";
// import Footer from "../components/Footer.astro";

const {
  title = "Title",
  description = "Description",
  url,
  image = "/social-preview-image.png",
  author = "Author",
} = Astro.props;
---

<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="css/iframemanager.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@v3.0.1/dist/cookieconsent.css"
    />
    <SiteMeta
      title={title}
      description={description.substring(0, 100)}
      url={Astro.site
        ? `${Astro.site}/${title.toLowerCase().replaceAll(" ", "-")}`
        : `https://accessible-astro.dev/${title
            .toLowerCase()
            .replaceAll(" ", "-")}`}
      image={image}
      author={author}
    />
  </head>
  <body>
    <slot />
    <DarkMode />
    <CookieConsent />
    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }
    </style>
    <script src="https://www.youtube.com/iframe_api" defer></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/gh/orestbida/iframemanager@1.2.5/dist/iframemanager.js"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@v3.0.1/dist/cookieconsent.umd.js"
    ></script>

    <script src="../lib/embedPlayerManager.js" defer></script>
  </body>
</html>
